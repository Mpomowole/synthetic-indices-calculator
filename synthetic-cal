  <script>
    function changeCalculator() {
      var calculatorType = document.getElementById("calculator-type").value;
      var bmiCalculator = document.getElementById("bmi-calculator");
      var temperatureConverter = document.getElementById("temperature-converter");

      if (calculatorType === "bmi") {
        bmiCalculator.style.display = "block";
        temperatureConverter.style.display = "none";
      } else if (calculatorType === "temperature") {
        bmiCalculator.style.display = "none";
        temperatureConverter.style.display = "block";
      }
    }

    function calculateBMI() {
      var height = document.getElementById("height").value;
      var weight = document.getElementById("weight").value;

      if (height === "" || weight === "") {
        alert("Please enter valid values for height and weight.");
        return;
